include mixins/blocks-table

doctype html
html.light-theme.scrollbar-type-1.sb-darkViolet

    include components/page-head

    body.m4-cloak.d-flex.flex-column
        include components/appbar

        div.container-fluid
            div.container
                include components/live
                include components/hero

        section.container-fluid
            div.container
                div.row
                    div.h1
                        span.reduce-2.text-muted Last Block Timelapse:
                        span#last-block-time.ml-2 --:--

        section.container-fluid
            div.container
                div.radius.mt-4(data-role="panel" data-title-caption="Last block dispute <span id='dispute-block-length'>0</span> participant(s)" data-cls-content="p-0" data-cls-title-caption="text-left enlarge-8 text-light")
                    div.scroll-table-container
                        +blocks-table("dispute-blocks-table")

                div.radius.mt-4(data-role="panel" data-title-caption="Canonical chain (last <span id='canonical-block-length'>0</span> blocks)" data-cls-content="p-0" data-cls-title-caption="text-left enlarge-8 text-light")
                    div.scroll-table-container
                        +blocks-table("canonical-blocks-table")

            div.mb-10 &nbsp;

        include components/footer

        include components/scripts

        script
            include ./js/index.js

